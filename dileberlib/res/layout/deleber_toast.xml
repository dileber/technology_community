<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:gravity="center"
              android:paddingTop="@dimen/toast_up_down"
              android:paddingBottom="@dimen/toast_up_down"
              android:paddingLeft="@dimen/toast_left_right"
              android:paddingRight="@dimen/toast_left_right"
              android:background="@drawable/toast_background"
              android:layout_height="match_parent">

    <TextView android:id="@+id/main_toast_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/toast_text"
            />

</LinearLayout>